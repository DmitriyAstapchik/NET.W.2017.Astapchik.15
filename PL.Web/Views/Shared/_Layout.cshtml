<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Accounts service</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container-fluid mb-3">
        <nav class="navbar navbar-expand-sm bg-dark navbar-dark ">
            @Html.ActionLink("Accounts service", "Index", "Service", new { area = "" }, new { @class = "navbar-brand " })

            <ul class="navbar-nav">
                <li class="nav-item">@Html.ActionLink("Home", "Index", "service", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("About", "About", "service", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Contact", "Contact", "service", null, new { @class = "nav-link" })</li>
            </ul>

            @Html.Partial("~/Views/Users/_LogOut.cshtml")
        </nav>
    </div>
    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Accounts service</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
