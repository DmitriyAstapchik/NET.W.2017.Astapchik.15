@model PL.WebApplication.Models.NewAccount
@{
    ViewBag.Title = "Create";
}

@Html.Partial("_PageHeader", "Create a new account")

@using (Html.BeginForm())
{
    @*@Html.ValidationSummary(true)*@
    <div class="form-group ">
        @Html.LabelFor(m => m.Type)
        @Html.EnumDropDownListFor(m => m.Type, new { @class = "form-control ", id = "type" })
    </div>
    <div class="form-group ">
        @Html.LabelFor(m => m.StartBalance)
        @Html.EditorFor(m => m.StartBalance, new { htmlAttributes = new { @class = "form-control ", id = "balance" } })
        @Html.ValidationMessageFor(m => m.StartBalance, null, new { @class = "text-danger" })
    </div>
    @*<button type="button" class="btn btn-primary " data-toggle="modal" data-target="#createModal">
            Create
        </button>*@

    <input type="button" class="btn btn-primary form-control" data-toggle="modal" data-target="#createModal" value="Create" id="create"/>

    <div class="modal" tabindex="-1" role="dialog" id="createModal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Create a new account?</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="card border-info mb-3">
                        <div class="card-header">New account</div>
                        <div class="card-body text-info">
                            <div class="card-text" id="typeDisplay">
                                @Html.DisplayNameFor(m => m.Type):
                                @*@Html.DisplayFor(m => m.Type, new { htmlAttributes = new { id = "typeDisplay" } })*@
                            </div>
                            <div class="card-text" id="balanceDisplay">
                                @Html.DisplayNameFor(m => m.StartBalance):
                                @*@Html.DisplayFor(m => m.StartBalance, new { htmlAttributes = new { id = "balanceDisplay" } })*@
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Yes</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                </div>
            </div>
        </div>
    </div>
}


<br />
@Html.Partial("_HomeLink")

@section Scripts{
    <script>
        $(function () {
            $("#create").click(function () {
                var type = $("#type option:selected").text();
                $("#typeDisplay").append(type);

                var balance = $("#balance").val();
                $("#balanceDisplay").append(balance);
            });
        });
    </script>
}