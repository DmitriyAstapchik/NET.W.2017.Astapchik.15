@model PL.WebApplication.Models.NewAccount
@{
    ViewBag.Title = "Create";
}

@Html.Partial("_PageHeader", "Create a new account")

@using (Html.BeginForm())
{
    @*@Html.ValidationSummary(true)*@
    <div class="form-group ">
        @Html.LabelFor(m => m.StartType)
        @Html.EnumDropDownListFor(m => m.StartType, new { @class = "form-control " })
      
        @*@Html.ValidationMessageFor(m => m.Type, null, new { @class = "text-danger" })*@
    </div>
    <div class="form-group ">
        @Html.LabelFor(m => m.StartBalance)
        @Html.EditorFor(m => m.StartBalance, new { htmlAttributes = new { @class = "form-control " } })
        @Html.ValidationMessageFor(m => m.StartBalance, null, new { @class = "text-danger" })
    </div>
    <input type="submit" class="btn btn-primary form-control" value="Create" />
}


<br />
@Html.Partial("_HomeLink")
