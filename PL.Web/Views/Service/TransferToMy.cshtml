@model PL.WebApplication.Models.BankAccount

@{
    ViewBag.Title = "TransferToMy";
}

@Html.Partial("_PageHeader", "Transfer to my account")

<u class="h6">Transfer from:</u>
@Html.Partial("_AccountInfo", Model)

<hr />

<u class="h6">Transfer to:</u>
@{ViewBag.ButtonText = "Transfer";}

@using (Html.BeginForm("TransferToMyAmount", "service"))
{
    @Html.Hidden("fromIBAN", Model.IBAN)
    @Html.Partial("_SelectAccount", (IEnumerable<PL.WebApplication.Models.BankAccount>)ViewBag.Accounts)
}