@model PL.WebApplication.Models.RegistrationData
@{
    ViewBag.Title = "Register";
}

@Html.Partial("_PageHeader", "Register")

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.FullName)
        @Html.EditorFor(m => m.FullName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m => m.FullName, null, new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.PassportID)
        @Html.EditorFor(m => m.PassportID, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m => m.PassportID, null, new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email)
        @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m => m.Email, null, new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password)
        @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m => m.Password, null, new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmedPassword)
        @Html.EditorFor(m => m.ConfirmedPassword, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m => m.ConfirmedPassword, null, new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Register</button>
}

@section Scripts{
   @Scripts.Render("~/bundles/jqueryval")
}