@model IEnumerable<PL.WebApplication.Models.BankAccount>
@{
    ViewBag.Title = "ViewAccountList";
}

<h2 class="page-header">List of accounts</h2>

<table class=" table table-hover">
    <thead>
        <tr>
            <th>IBAN</th>
            <th>Owner</th>
            <th>Balance</th>
            <th>Bonus points</th>
            <th>Account type</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var acc in Model)
        {
            <tr>
                <td>@acc.IBAN</td>
                <td>@acc.Owner</td>
                <td>@acc.Balance</td>
                <td>@acc.BonusPoints</td>
                <td>@acc.AccountType</td>
            </tr>
        }
    </tbody>
    <tfoot>

    </tfoot>
</table>

@Html.ActionLink("back to service", "Index", "home", null, new { @class = "btn btn-default"})