@model PL.WebApplication.Models.BankAccount
@{
    ViewBag.Title = "Create";
}

<h2 class="page-header">Create a new account</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        <label for="owner">Owner:</label>
        <input type="text" id="owner" name="owner" class="form-control" />
    </div>
    <div class="form-group">
        <label for="balance">Start balance:</label>
        <input type="number" id="balance" name="balance" class="form-control"/>
    </div>
    @*<button type="submit" class="btn btn-primary ">Create</button>*@
    <input type="button" class="btn btn-primary form-control" value="Create" data-toggle="modal" data-target="#myModal"/>
    {
        ViewBag.Message = "Create a new account?";
    }
    @Html.Partial("CreateModal", Model)
}

<br />
